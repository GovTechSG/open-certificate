{
  "extends": ["airbnb-base", "prettier", "plugin:jest/recommended"],
  "env": {
    "mocha": true
  },
  "plugins": ["prettier", "jest"],
  "globals": {
    "artifacts": false,
    "contract": false,
    "assert": false,
    "expect": true,
    "web3": false
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "func-names": ["error", "as-needed"],
    "prettier/prettier": "error",
    "no-unused-expressions": "off"
  }
}
